{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "rootDir": ".",
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "strictNullChecks": true
    }
  },
}